<Window x:Class="athens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Shop Management System" Height="640" Width="1000">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Shop Management System (หมวดเครื่องดื่ม)" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" />

        <TabControl Grid.Row="1" Margin="0,0,0,10">
            <TabItem Header="สินค้า">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="เพิ่มตัวอย่างสินค้า" Width="150" Margin="0,0,8,0" Click="SeedProducts_Click"/>
                        <Button Content="ค้นหาทั้งหมด" Width="120" Margin="0,0,8,0" Click="LoadProducts_Click"/>
                        <Button Content="แจ้งเตือนสต็อกต่ำ" Width="140" Click="LowStock_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="ProductsGrid" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="120"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="POS">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="ทดสอบการขายแบบง่าย: สินค้ารายการแรก 1 ชิ้น" Margin="0,0,0,8"/>
                    <Button Content="ขายสินค้าและออกใบเสร็จ" Width="220" Click="Checkout_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="รายงาน">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Content="สร้างรายงานสินค้าคงคลัง" Width="190" Click="InventoryReport_Click"/>
                    <ListBox x:Name="ReportList" Grid.Row="1" Margin="0,8,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>

        <TextBlock x:Name="StatusText" Grid.Row="2" Foreground="DarkSlateBlue" FontWeight="SemiBold" />
    </Grid>
</Window>
